# Railway Environment Configuration
# Copy this to .env.railway and configure for your Railway deployment

# Railway automatically sets these:
# RAILWAY=true
# RAILWAY_SERVICE_NAME=email-gateway (or email-gateway-worker)
# RAILWAY_SERVICE_ID=...
# RAILWAY_DEPLOYMENT_ID=...

# Database (Railway will provide these automatically)
DATABASE_URL=postgresql://postgres:password@postgres:5432/emailgateway

# Redis (Railway will provide these automatically)
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_ISSUER=email-gateway
JWT_AUDIENCE=waymore-platform

# Email Providers
PROVIDERS_ENABLED=routee
ROUTEE_CLIENT_ID=your-routee-client-id
ROUTEE_CLIENT_SECRET=your-routee-client-secret
ROUTEE_BASE_URL=https://connect.routee.net

# Rate Limiting
RATE_GLOBAL_RPS=1000
RATE_TENANT_DEFAULT_RPS=100

# Worker Configuration
WORKER_CONCURRENCY=5

# Logging
LOG_LEVEL=info

# Service Mode (set to 'worker' for worker service)
SERVICE_MODE=api
