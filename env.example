# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/emailgateway?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_ISSUER="email-gateway"
JWT_AUDIENCE="waymore-platform"

# Rate Limiting
RATE_GLOBAL_RPS=200
RATE_TENANT_DEFAULT_RPS=20

# Timeouts
TIMEOUT_SEND_MS=10000
RETRY_MAX=6

# Providers
PROVIDERS_ENABLED="routee"
ROUTEE_API_KEY="your-routee-api-key"

# Server
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"

# Logging
LOG_LEVEL="info"
